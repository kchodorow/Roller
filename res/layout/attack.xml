<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<EditText
    android:id="@+id/attack_name"  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/attack_name"
    />
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
<EditText 
    android:id="@+id/die_num"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1"
/>
<Spinner 
 	android:id="@+id/die_size"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:prompt="@string/die_size"
/>
<TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="+"
    />
<EditText 
    android:id="@+id/die_bonus"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
/>
</LinearLayout>
<Button 
    android:id="@+id/attack_roll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/roll"
/>
<Button 
    android:id="@+id/attack_save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/save"
/>
</LinearLayout>